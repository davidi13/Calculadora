<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:gravity="center"
    android:orientation="vertical">

    <GridLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:columnCount="4"
        android:orientation="horizontal">

        <!-- TextView para mostrar el resultado -->
        <TextView
            android:id="@+id/display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnSpan="4"
            android:layout_gravity="fill"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_background2"
            android:gravity="end"
            android:padding="16dp"
            android:text="0"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <!-- Nueva fila con los botones de memoria -->
        <Button
            android:id="@+id/buttonMemoryAdd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_margin="1dp"
            android:layout_columnWeight="1"
            android:background="@drawable/button_background"
            android:text="M+" />

        <Button
            android:id="@+id/buttonMemorySubtract"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_margin="1dp"
            android:layout_columnWeight="1"
            android:background="@drawable/button_background"
            android:text="M-" />

        <Button
            android:id="@+id/buttonMemoryClear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_margin="1dp"
            android:layout_columnWeight="1"
            android:background="@drawable/button_background"
            android:text="Mc" />

        <Button
            android:id="@+id/buttonMemoryRecall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_margin="1dp"
            android:layout_columnWeight="1"
            android:background="@drawable/button_background"
            android:text="Mr" />

        <!-- Botones numéricos y de operación -->
        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_columnWeight="1"
            android:background="@drawable/button_background"
            android:text="1" />

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_columnWeight="1"
            android:background="@drawable/button_background"
            android:text="2" />

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_columnWeight="1"
            android:background="@drawable/button_background"
            android:text="3" />

        <Button
            android:id="@+id/buttonMultiply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_columnWeight="1"
            android:background="@drawable/button_background"
            android:text="*" />

        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_columnWeight="1"
            android:background="@drawable/button_background"
            android:text="4" />

        <Button
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_columnWeight="1"
            android:background="@drawable/button_background"
            android:text="5" />

        <Button
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_columnWeight="1"
            android:background="@drawable/button_background"
            android:text="6" />

        <Button
            android:id="@+id/buttonSubtract"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_columnWeight="1"
            android:background="@drawable/button_background"
            android:text="-" />

        <Button
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_columnWeight="1"
            android:background="@drawable/button_background"
            android:text="7" />

        <Button
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_columnWeight="1"
            android:background="@drawable/button_background"
            android:text="8" />

        <Button
            android:id="@+id/button9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_columnWeight="1"
            android:background="@drawable/button_background"
            android:text="9" />

        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_columnWeight="1"
            android:background="@drawable/button_background"
            android:text="+" />

        <Button
            android:id="@+id/button0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:layout_margin="1dp"
            android:layout_columnWeight="1"
            android:background="@drawable/button_background"
            android:text="0" />

        <Button
            android:id="@+id/buttonDoubleZero"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_columnWeight="1"
            android:background="@drawable/button_background"
            android:text="00" />

        <Button
            android:id="@+id/buttonDivide"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_columnWeight="1"
            android:background="@drawable/button_background"
            android:text="/" />

        <Button
            android:id="@+id/buttonEquals"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnSpan="3"
            android:layout_gravity="fill"
            android:layout_margin="1dp"
            android:layout_columnWeight="1"
            android:background="@drawable/button_background"
            android:text="=" />

        <Button
            android:id="@+id/buttonClear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_columnWeight="1"
            android:background="@drawable/button_background"
            android:text="C" />
    </GridLayout>

</LinearLayout>
