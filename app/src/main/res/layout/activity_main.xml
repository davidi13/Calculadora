<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    android:gravity="center">

    <GridLayout
    android:layout_width="wrap_content"
    android:id="@+id/main"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:columnCount="4"
    android:orientation="horizontal"
    android:layout_marginTop="50dp">

    <!-- TextView para mostrar el resultado -->
    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnSpan="4"
        android:layout_gravity="fill"
        android:gravity="end"
        android:padding="16dp"
        android:text="0"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:background="@drawable/button_background2"
        android:layout_marginBottom="8dp" />

    <!-- Botones de la calculadora con IDs -->

    <!-- Nueva fila con los botones de memoria -->
    <Button
        android:id="@+id/buttonMemoryAdd"
        android:layout_column="0"
        android:background="@drawable/button_background"
        android:text="M+"
        android:layout_margin="1dp" />
    <Button
        android:id="@+id/buttonMemorySubtract"
        android:layout_column="1"
        android:background="@drawable/button_background"
        android:text="M-"
        android:layout_margin="1dp"/>
    <Button
        android:id="@+id/buttonMemoryClear"
        android:layout_column="2"
        android:background="@drawable/button_background"
        android:text="Mc"
        android:layout_margin="1dp"/>
    <Button
        android:id="@+id/buttonMemoryRecall"
        android:layout_column="3"
        android:background="@drawable/button_background"
        android:text="Mr"
        android:layout_margin="1dp"/>

    <!-- Botones numéricos y de operación -->
    <Button
        android:id="@+id/button1"
        android:background="@drawable/button_background"
        android:text="1"
        android:layout_margin="1dp"/>
    <Button
        android:id="@+id/button2"
        android:background="@drawable/button_background"
        android:text="2"
        android:layout_margin="1dp"/>
    <Button
        android:id="@+id/button3"
        android:background="@drawable/button_background"
        android:text="3"
        android:layout_margin="1dp"/>
    <Button
        android:id="@+id/buttonMultiply"
        android:background="@drawable/button_background"
        android:text="*"
        android:layout_margin="1dp"/>
    <Button
        android:id="@+id/button4"
        android:background="@drawable/button_background"
        android:text="4"
        android:layout_margin="1dp"/>
    <Button
        android:id="@+id/button5"
        android:background="@drawable/button_background"
        android:text="5"
        android:layout_margin="1dp"/>
    <Button
        android:id="@+id/button6"
        android:background="@drawable/button_background"
        android:text="6"
        android:layout_margin="1dp"/>
    <Button
        android:id="@+id/buttonSubtract"
        android:background="@drawable/button_background"
        android:text="-"
        android:layout_margin="1dp"/>
    <Button
        android:id="@+id/button7"
        android:background="@drawable/button_background"
        android:text="7"
        android:layout_margin="1dp"/>
    <Button
        android:id="@+id/button8"
        android:background="@drawable/button_background"
        android:text="8"
        android:layout_margin="1dp"/>
    <Button
        android:id="@+id/button9"
        android:background="@drawable/button_background"
        android:text="9"
        android:layout_margin="1dp"/>
    <Button
        android:id="@+id/buttonAdd"
        android:layout_gravity="fill"
        android:layout_rowSpan="1"
        android:background="@drawable/button_background"
        android:text="+"
        android:layout_margin="1dp"/>

    <Button
        android:id="@+id/button0"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:background="@drawable/button_background"
        android:text="0"
        android:layout_margin="1dp"/>
    <Button
        android:id="@+id/buttonDoubleZero"
        android:background="@drawable/button_background"
        android:text="00"
        android:layout_margin="1dp"/>
    <Button
        android:id="@+id/buttonDivide"
        android:background="@drawable/button_background"
        android:text="/"
        android:layout_margin="1dp"/>
    <Button
        android:id="@+id/buttonEquals"
        android:layout_columnSpan="3"
        android:layout_gravity="fill"
        android:background="@drawable/button_background"
        android:text="="
        android:layout_margin="1dp"/>
    <Button
        android:id="@+id/buttonClear"
        android:background="@drawable/button_background"
        android:text="C"
        android:layout_margin="1dp"/>
    </GridLayout>

    </LinearLayout>
